// toppage styles
#toppage
    position relative
#toppage-background
    position absolute
    z-index -1
    top 0
    left 0
    height 100vh
    width 100vw
    background-color green
    // box-sizing: border-box
    // background-image: url("/img/artwork-main.jpg")
    // background-size: cover

#toppage-foreground
    position absolute
    top 0
    left 0
    height 100vh
    width 100vw
    text-align left
    padding-top 60px
    padding-left 20px
    box-sizing: border-box
    a:hover
        // text-decoration: underline
        cursor: pointer
    a
        display block


.outside-stroke
    position relative
    background transparent
    z-index: 0
    color black

