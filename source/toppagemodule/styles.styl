#toppage-heading
    margin-bottom 40px
    
#toppage-heading-home
    margin-bottom 14px
#toppage-heading-klaus
    font-size 27pt
    margin-bottom 14px
#toppage-heading-salmutter
    font-size 27pt


#toppage-main-menu
    font-size 16pt
    margin-bottom 40px

    a
        margin-bottom 14px

#toppage-bottom
    font-size 14pt
    a
        margin-bottom 14px



@media (min-aspect-ratio: 1/1)
    #toppage-background
        height 100vw
        width 100vh
        transform-origin: top right
        transform: rotate(270deg) translateY(-100vh)