// toppage styles
#toppage
    position relative
#toppage-background
    position absolute
    z-index -1
    top 0
    left 0
    height 100vh
    width 100vw
    background-image: url("/img/artwork-main.jpg")
    background-size: cover

#toppage-foreground
    position absolute
    top 0
    left 0
    height 100vh
    width 100vw
    text-align left
    padding-top 60px
    padding-left 20px
    a:hover
        text-decoration: underline
        cursor: pointer


#toppage-heading-klaus
    font-size 27pt
    text-shadow 4px 4px 10px black

#toppage-heading
    margin-bottom 40px

#toppage-main-menu
    font-size 16pt
    text-shadow 2px 2px 4px black
    margin-bottom 16px

    a
        margin-right 4px
#toppage-bottom
    text-shadow 2px 2px 3px black
    font-size 14pt
    a
        margin-right 3px

@media (min-aspect-ratio: 1/1)
    #toppage-background
        height 100vw
        width 100vh
        transform-origin: top right
        transform: rotate(270deg) translateY(-100vh)